@{
    ViewBag.Title = "Fast Coin Trader";
}
@using FastCoinTrader.EnitityModels.EntityHelper
<style>
    .minus-left {
    margin-left:-15px;
    }
    h1.heading {
        text-align:center;
        margin-bottom:25px;
        font-size:25px;
    }
    .textCenter{
        text-align:center;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Fast Coin Trader
        </h1>

    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="center-text alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info-circle"></i>  We provide the most affordable exchange service in the world with a fee of only 0.5%
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel fixed panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <h1 class="heading">My Wallet</h1>
                    <div class="col-xs-7 text-left">
                        @if (!string.IsNullOrEmpty(User.Identity.Name))
                        {
                            var account = @WalletEntityHelper.GetWalletByUserAccount(UserAccountEntityHelper.GetUserAccountKeyByEmail(User.Identity.Name));
                            <div>
                                <div class="control-group control-head">
                                    <label class="control-label">BTC:</label>
                                    <div class="controls readonly">
                                        <i class="fa fa-btc"></i> @account.tbl_Wallet_BTCBalance
                                    </div>
                                </div>
                                <div class="control-group control-head">
                                    <label class="control-label">ZAR:</label>
                                    <div class="controls readonly">
                                        <strong>R</strong> @account.tbl_Wallet_ZARBalance
                                    </div>
                                </div>
                                <div class="control-group control-head">
                                    <label class="control-label">Pending:</label>
                                    <div class="controls readonly">
                                        <strong>R</strong> @account.tbl_Wallet_ZARPending
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-bitcoin fa-5x"></i>
                    </div>
                </div>
            </div>
            <a href="/Wallet/MyWallet">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel fixed panel-green">
            <div class="panel-heading">
                <div class="row">
                    <h1 class="heading">My Transactions</h1>
                    <div class="col-xs-7 text-left">
                       
                        <div class="huge">12</div>
                        <div>Transactions</div>
                    </div>
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-refresh fa-5x"></i>
                    </div>
                    
                </div>
            </div>
            
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <a style="color:#5CB85C" href="/BuyDashboard/BuyDashboard#/home">
                                <div class="col-xs-6">
                                    <span class="minus-left pull-left">Buy</span>&nbsp<i class="fa fa-arrow-circle-right"></i>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <a  style="color:#5CB85C" href="/SellDashboard/SellDashboard">
                                <div class="col-xs-6">
                                    <span class="minus-left pull-left">Sell</span>&nbsp
                                    <i class="fa fa-arrow-circle-right"></i>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
</div>
                        </div>
                   </div>

        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel fixed panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <h1 class="heading">Trade History</h1>
                    <div class="col-xs-7 text-left">
                        <div><strong>BTC Amount:</strong><br />2<br /><strong>BTC Price:</strong><br />10,000<br /><strong>Total:</strong><br />20,000</div>
                    </div>

                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel fixed panel-red">
            <div class="panel-heading">
                <div class="row">
                    <h1 class="heading">Support</h1>
                    <div class="col-xs-7 text-left">
                        <br />
                        <div>Any Questions?</div>
                    </div>
                    <div class="col-xs-3">
                        <i class="fa fa-support fa-5x"></i>
                    </div>
                   
                </div>
            </div>
            <a href="/FAQ/Index">
                <div class="panel-footer">
                    <span class="pull-left">View FAQ</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Top 10 trades to date</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>                                
                                <th>Amount of BTC</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Date of Trade</th>
                            </tr>
                        </thead>
                        <tbody>
                           @Html.Partial("_TopTrades")
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->



