@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FastCoinTrader.EnitityModels.EntityHelper
<style>
    .textRight {
        text-align: right;
    }

    .textCenter {
        text-align: center;
    }

    .blue-header {
        background-color: #57cdf2 !important;
    }

    .header-background {
        background-color: #d8feff !important;
    }
</style>

<div>
    <form method="POST" role="form" class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    <i class="fa fa-dollar fa-fw" style="color: green;"></i> Buy Bitcoin
                </h1>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3 style="color: grey">
                    Make An Offer
                </h3>
                <hr />
            </div>

            <div class="form-body">
                <div class="form-group col-md-6">
                    <div class="col-md-8">
                        <label class="gray-label">Amount of Bitcoin</label>
                        <input id="amount" type="text" class="form-control" placeholder="Amount of BTC" />
                    </div>

                </div>
                <div class="form-group col-md-6">
                    <div class="col-md-8">
                        <label class="gray-label">Price per Bitcoin</label>
                        <input id="price" type="text" class="form-control" placeholder="Price per BTC" />
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="col-md-8">
                        <label class="gray-label">Transaction Fee</label>
                        <input id="fee" type="text" class="form-control" placeholder="Fee" disabled />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-md-8">
                        <label class="gray-label">Total Price</label>
                        <input id="total" type="text" class="form-control" placeholder="Total Price" />
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="buying-button btn btn-primary" disabled>
            <i class="fa fa-dollar fa-fw"></i>
            Buy
        </button>
        <hr />

        <!--DATA TABLE SELL OFFERS START-->
        <div class="row">
            <div class="col-md-12">
                <h3 style="color: grey">
                    Available Offers
                </h3>
                <hr />
            </div>
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> <strong>Top 10 sales offers</strong></h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th class="textCenter">#</th>
                                        <th class="textCenter">Bitoin For Sale</th>
                                        <th class="textCenter">Bitcoin Sold</th>
                                        <th class="textCenter">Price (ZAR)</th>
                                        <th class="textCenter">Total (ZAR)</th>
                                        <th class="textCenter">Date</th>
                                        <th class="textCenter">Options</th>
                                    </tr>
                                </thead>
                                <tbody class="sale-offers-table">
                                    @Html.Partial("_SaleOffers")
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- CONFIRMATION MODAL START-->
        <div class="modal fade" id="myModal" role="dialog">

            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title">Order Confirmation</h3>
                    </div>
                    <div class="modal-body">
                        <div class="form-body">
                            <div class="row">
                                <h4 class="center-text">Are you sure you want to place this buy offer.</h4>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="submitForm();" data-dismiss="modal">Confirm</button>
                        <button type="button" class="btn btn-default" onclick="closeModal();" data-dismiss="modal">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- CONFIRMATION MODAL END-->
    </form>
</div>










